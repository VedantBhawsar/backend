generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id            String    @id @unique @map(name: "id")
  title         String
  url           String
  genres        String[]
  totalEpisodes Int
  image         String
  releaseDate   String
  description   String?
  subOrDub      String?
  type          String?
  status        String?
  otherName     String?
  episodes      Episode[]
}

model Episode {
  id      String @id @map(name: "id")
  number  Int
  url     String
  anime   Anime  @relation(fields: [animeId], references: [id])
  animeId String
}

model News {
  id            String   @id @map(name: "id")
  title         String
  uploadedAt    String
  topics        String[]
  thumbnail     String
  thumbnailHash String
  url           String
  // preview       Preview? @relation(fields: [previewId], references: [id])
  previewId     String?
  createdAt     DateTime @default(now())
}

model Preview {
  id    String  @id @default(uuid())
  intro String?
  full  String?
  // News  News[]
}

model StreamingSite {
  id   String @id @map(name: "id")
  name String
  url  String
}
